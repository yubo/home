[user]
	name = yubo
	email = yubo@yubo.org
[diff]
	tool = nvimdiff
[difftool]
	prompt = No
[core]
	editor = vim
	whitespace = tab-in-indent,trailing-space
	trustctime = false
[alias]
	s = show --color --pretty=format:%b
	d = difftool
	dl = difftool HEAD^ HEAD
	dc = difftool --cached
	df = "!f() { git diff --name-status \"$1^\" \"$1\"; }; f"
	dd = "!f() { git difftool \"$1^\" \"$1\"; }; f"
	co = checkout
	cm = commit
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	l = log --oneline --decorate -12 --color
	ll = log --oneline --decorate --color
	lc = log --graph --color
	sbi = submodule init
	sbu = submodule update
	sbp = submodule foreach git pull
	sbc = submodule foreach git co master
	# ignore change
	ic = update-index --assume-unchanged
	nic = update-index --no-assume-unchanged
[push]
	default = tracking
[color]
	ui = auto
[credential]
	helper = cache --timeout 2592000
[pull]
	rebase = false
[includeIf "gitdir:~/didi/"]
	path = ~/.gitconfig.didi
[url "https://steveyubo:ZszKuEac3yYPtbBiCrXE@git.xiaojukeji.com"]
	insteadOf = https://git.xiaojukeji.com
